<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="Nachricht: %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="de.derteufelqwe.plugin.Main" level="trace">
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>